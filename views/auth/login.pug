extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        p(class="text-center text-2xl font-extrabold")= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-sm.text-center.p-2.mb-2.font-bold.rounded-md= error.msg
        
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-lg
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej: random@random.com" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-3.font-bold(for="password") Contrase침a
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contrase침a" type="password" name="password")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") Crear una cuenta
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Contrase침a

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-lg shadow-lg" type="submit" value="Iniciar Sesi칩n")