extends ./layout/app 

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5 ")
        h1(class="text-center text-4xl font-extrabold ") Ubicaci√≥n en el Mapa



        div(class="flex flex-col md:flex-row items-center py-10 gap-4 p-3 md:px-0")
            h2(class="text-sm uppercase text-gray-900 font-bold") Filtrar Propiedades:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="w-24 text-sm uppercase text-gray-500 font-bold") Categorias:
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="" class="font-medium") - Seleccione -
                    option(value="" class="font-medium") Todos  
                    each categoria in categorias
                        option(value=categoria.id class="font-medium")= categoria.nombre


            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="w-24 text-sm uppercase text-gray-500 font-bold") Precio:
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="" class="font-medium") - Seleccione - 
                    option(value="" class="font-medium") Todos
                    each precio in precios
                        option(value=precio.id class="font-medium")= precio.precio


        div(id="mapa-inicio" class="h-[400px] md:h-[600px] mt-5 rounded-lg")

        if destacados.length
            section(class="py-5 p-3 md:px-0")
                h2(class="text-center text-4xl font-extrabold pt-10") Propiedades Destacadas
                div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in destacados
                        include ./templates/card
        if casas.length
            section(class="py-5 p-3 md:px-0")
                h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta
                div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in casas
                        include ./templates/card

        if departamentos.length                 
            section(class="py-5 p-3 md:px-0")
                h2(class="text-center text-4xl font-extrabold pt-10") Apartamentos en Venta
                div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in departamentos
                        include ./templates/card






block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")